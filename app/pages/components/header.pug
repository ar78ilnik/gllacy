.header
    div(class="container container_header")
        div(class="container container_logo")
            a(class="logo" href="#")='Languages'
            button(class="button button_navigation button_navigation-open" aria-expanded="false" aria-controls="menu__list")
                svg(class="icon icon_navigation" aria-hidden="true" width="32" height="32")
                    use(class="icon__cross" href="img/sprite.svg#cross")
                    use(class="icon__menu" href="img/sprite.svg#menu")
        nav.navigation
            ul(class="navigation navigation__list navigation__list_open" id="menu__list")
                li.navigation__item
                    a(class='navigation__link' href='#')='Обо мне'
                li.navigation__item
                    a(class='navigation__link' href='#')='Курсы и лекции'
        .user
            .user__search
                svg(class="icon" width="32" height="32")
                    use(class="navigation__icon-menu" href="img/sprite.svg#search")
            .user__enter
                svg(class="icon" width="32" height="32")
                    use(class="navigation__icon-menu" href="img/sprite.svg#exit")
            .user__card
                svg(class="icon" width="32" height="32")
                    use(class="navigation__icon-menu" href="img/sprite.svg#card")